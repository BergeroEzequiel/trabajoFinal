    <!--- HOME -->
    <bean id="home-solar"
        class="org.springframework.web.servlet.view.JstlView">
        <property name="url" value="/WEB-INF/views/home/home-solar.jsp" />
    </bean>
    
    <!-- CONFIGURACION -->
    <bean id="conf-umbrales"
        class="org.springframework.web.servlet.view.JstlView">
        <property name="url" value="/WEB-INF/views/configuracion/conf-umbrales.jsp" />
    </bean>
    
    <bean id="conf-alertas"
        class="org.springframework.web.servlet.view.JstlView">
        <property name="url" value="/WEB-INF/views/configuracion/conf-alertas.jsp" />
    </bean>    
    
    <bean id="conf-nodos"
        class="org.springframework.web.servlet.view.JstlView">
        <property name="url" value="/WEB-INF/views/configuracion/conf-nodos.jsp" />
    </bean>

    <!-- ALERTAS -->
    <bean id="alertas-detalle"
          class="org.springframework.web.servlet.view.JstlView">
        <property name="url" value="/WEB-INF/views/alertas/alertas-detalle.jsp" />
    </bean>

    <!-- NODOS -->
    <bean id="nodos-detalle"
          class="org.springframework.web.servlet.view.JstlView">
        <property name="url" value="/WEB-INF/views/nodos/nodos-detalle.jsp" />
    </bean>

    <!-- HISTORICOS -->
    <bean id="historicos"
          class="org.springframework.web.servlet.view.JstlView">
        <property name="url" value="/WEB-INF/views/historicos/historicos.jsp" />
    </bean>
    
    <!-- LOGIN -->
    <bean id="login"
          class="org.springframework.web.servlet.view.JstlView">
        <property name="url" value="/WEB-INF/views/login/login.jsp" />
    </bean>
    
</beans>